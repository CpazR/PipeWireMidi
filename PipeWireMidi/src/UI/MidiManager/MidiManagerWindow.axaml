<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PipeWireMidi.UI.MidiManager.MidiManagerWindow"
        Title="Avalonia Tray Icon Sample"
        Width="1280" Height="720" WindowState="Normal" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            Avalonia Tray Icon Sample
        </Label>

        <Label Name="LblActivationMode" Grid.Row="1" FontSize="16" HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center">
            Activated by...
        </Label>

        <ComboBox Grid.Row="1" Margin="20">
            <ComboBoxItem>Test Item 1</ComboBoxItem>
            <ComboBoxItem>Test Item 2</ComboBoxItem>
            <ComboBoxItem>Test Item 3</ComboBoxItem>
        </ComboBox>

        <Button Name="CmdClose" Click="CmdClose_OnClick" IsCancel="True" Grid.Row="2" Margin="30"
                HorizontalAlignment="Center">
            _Close
        </Button>
    </Grid>
</Window>